<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textSize="28sp" android:textColor="#ffffff" android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="100dp" android:text="НАСТРОЙКА ПРИЛОЖЕНИЯ" android:layout_alignParentTop="true" android:layout_marginStart="30dp" android:layout_alignParentStart="true"/>
    <EditText android:textSize="20sp" android:textColor="#ffffff" android:id="@+id/editMyUrl" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="240dp" android:ems="10" android:layout_alignParentTop="true" android:inputType="textUri" android:layout_marginStart="30dp" android:layout_marginEnd="100dp" android:layout_alignParentStart="true" android:layout_alignParentEnd="true"/>
    <TextView android:textColor="#ffffff" android:id="@+id/comEditMyUrl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="220dp" android:text="Введите адрес сервера для отображения контента http:// или https://" android:layout_alignParentTop="true" android:layout_marginStart="30dp" android:layout_alignParentStart="true"/>
    <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="300dp" android:text="Программа добавляет\10 уникальный идентификатор " android:layout_alignParentTop="true" android:layout_marginStart="30dp" android:layout_alignParentStart="true"/>
    <Button android:id="@+id/btnListAdres" android:background="#555555" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="300dp" android:text="Читать" android:layout_alignParentTop="true" android:onClick="ListMyUrl" android:layout_marginEnd="210dp" android:layout_alignParentEnd="true"/>
    <Button android:id="@+id/btnSaveAdres" android:background="#f44336" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="300dp" android:text="Записать" android:layout_alignParentTop="true" android:onClick="SaveMyUrl" android:layout_marginEnd="100dp" android:layout_alignParentEnd="true"/>
</RelativeLayout>
